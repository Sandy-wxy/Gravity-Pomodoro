  <view class="timer-circle {{isFocusing ? 'focus-mode' : ''}}">
    <text class="time-display">{{displayTime}}</text>
  </view>

  <view class="motto-box">
    <text class="motto-text">“{{motto}}”</text>
  </view>
</view>